  <DataSources>
    <DataSource Name="LegacyDS">
      <ConnectionProperties>
        <DataProvider>SQL</DataProvider>
        <ConnectString>Data Source=localhost;Initial Catalog=LegacyDB</ConnectString>
      </ConnectionProperties>
